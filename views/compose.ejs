<%- include("partials/header") -%>
  <h1>Compose</h1>
  <%# post the typed text to /compose route, then in app.js grab it by making a app.post with compose %>
  <form action="/compose" method="post">
    <div class="form-group">
      <label>Title</label>
      <input class="form-control" type="text" name="postTitle" style="width:100%;" autocomplete="off">
      <label>Post</label>
      <textarea class="form-control" name="postBody" rows="6" style="width:100%;"></textarea>
    </div>
    <button class="btn btn-primary" type="submit" name="button">Publish</button>
  </form>
<%- include("partials/footer") -%>
